{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist",
		"noImplicitAny": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true
	},
	
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}